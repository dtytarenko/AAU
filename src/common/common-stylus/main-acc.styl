    }

    @media screen and (max-width: 760px) {
        font-size 12px
    }

.developer 
    display flex
    align-items center
    justify-content center
    font-size 14px
    margin-top 30px
    margin-bottom 17px

    @media screen and (max-width 900px){
        margin-top 0 
        }
        
    img 
        width 119px
