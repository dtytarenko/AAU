body
    position relative

.subscribe-body 
    position inherit

main
    overflow hidden

    @media screen and (max-width: 1280px){
        padding-bottom: 120px
    }

h2 
    color semiPurple
    font-family 'HelveticaNeue-Roman'
    font-size 24px
    line-height 30px
    letter-spacing 1.8px
    font-weight: 400
