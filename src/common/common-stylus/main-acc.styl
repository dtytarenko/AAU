.account-checkbox__wrap
    display flex
    flex-direction row
    align-items center
    position relative
    margin-bottom 20px

.account-checkbox__input
    appearance none
    margin 0
    width 23px
    height 20px
    box-sizing border-box
    position relative
    z-index 3

.account-checkbox__input-wrap
