.heading
    @media screen and (max-width: 1280px) {
        align-self flex-start
        width 100%
    }

.separator
    margin 20px 0 40px 0
    position relative
    height 11px
    display flex
  
    &:after
        content ''
        display block
        height 1px
        width calc(100% - 20px)
        background-color themeColor
        position absolute
        top 5px
        right 0

        @media screen and (max-width: 510px) {
            width 100%
        }

    @media screen and (max-width: 510px) {
        justify-content center
    }


//////article
.stndrt__text
    font-family 'HelveticaNeue-Light'
    line-height 30px
    color semiBlack
    font-size 16px
    text-align justify
    margin-bottom 20px

    @media screen and (max-width: 510px) {
        text-align center
        line-height 22px
        font-size 16px
        margin-bottom 5px
    }

    &:not(:last-child)
        margin-bottom 40px

        @media screen and (max-width: 510px) {
            margin-bottom 20px
        }

//------------------------blog-------------------------

.blog-entry
    display flex
    margin-bottom 50px

    @media screen and (max-width: 510px) {
        flex-direction column
        justify-content center
    }

.blog-entry__wrapimage
    max-width 180px
    max-height 180px
    height 100%
    width 100%

    @media screen and (max-width: 510px) {
        margin 0 auto
    }

    img
        width 180px
        height 180px
        object-fit cover


.blog-entry__wraptext
    margin-left 40px
    @media screen and (max-width: 1280px){
        width 100%
        }

.blog-entry__wraptext
        @media screen and (max-width: 510px) {
        margin 0
        }

.blog-entry__title
    font-weight 500
    font-family 'HelveticaNeue-Bold'
    font-size 18px
    color semiViolet
    margin-bottom 15px
    line-height 24px
    padding-right 15px

    @media screen and (max-width: 510px) {
        text-align center
        width 100%
        padding 0
        margin-top 20px
    }

.blog-entry__date
    font-family 'HelveticaNeue-Bold'
    font-size 14px
    color whiteColor
    line-height 24px
    letter-spacing 0.001em
    background url("../../img/all/date-blog.png") no-repeat
    position relative
    margin-bottom 20px
    padding-left 22px

    @media screen and (max-width: 510px) {
        text-align center
        background-position center
        padding 0
    }

    &:after
        content ''
        display block
        height 1px
        width calc(100% - 110px)
        position absolute
        top 11px
        left 110px
        background-color semiPurple

        @media screen and (max-width: 510px) {
            width 100%
            left 0
            z-index -1
        }

.blog-entry__preview
    font-weight 300
    font-family 'HelveticaNeue-Light'
    font-size 14px
    color semiBlack
    line-height 20px
    letter-spacing 0.025em
    margin-bottom 15px
    letter-spacing 0.35px
    padding-right 25px

    @media screen and (max-width: 510px) {
        text-align center
        padding 0
    }

.blog-entry__more
    font-family 'HelveticaNeue-Black'
    font-size 12px
    font-weight 400
    line-height 24px
    letter-spacing 0.01em
    display flex
    align-items center
    justify-content flex-end
    color semiPurple

    @media screen and (max-width: 510px) {
        justify-content center
    }

    &:after 
        display block
        content ''
        right 50%
        top 0
        width 24px
        height 20px
        background url('../../img/all/read-more.png')
        margin-left 10px

    &:hover
        opacity 0.7



.blog-entry__btn-group 
    display flex
    margin-top auto
    justify-content space-between
    align-items center
    
    .btn-m
        margin-left 20px

        @media screen and (max-width: 510px) {
            margin 10px 0 0 0
        }

    @media screen and (max-width: 510px) {
        flex-direction column
    }

    a
        @media screen and (max-width: 510px) {
            max-width none
        }
    

.container
    max-width 1280px
    width 100%
    padding 100px 0
    box-sizing border-box
    margin 0 auto
    display flex
    justify-content space-between

    @media screen and (max-width: 1280px) {
        flex-direction column
        align-items center
        padding 80px 35px
    }

    @media screen and (max-width: 510px) {
        padding 40px 22px
    }
 
//-------------------------------video-------------------------

.video
    max-width 420px
    width 100%
    max-height 248px
    height 100%
    border 10px solid whiteColor
    box-shadow -4.774px 5.119px 29px 0px rgba(0, 0, 0, 0.54)
    display flex
    align-items center
    justify-content center
    
    @media screen and (max-width: 500px){
        max-width: 280px;
        max-height: 160px;
        margin 0 auto
    }

    iframe 
        width 100%
        height 100%


