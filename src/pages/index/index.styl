//-------------------------------------------preview-------------------------------------------
.intro-slider
	.container 
		max-width 1880px
		width: 100%
		flex-direction column
		justify-content space-between
		align-items center



.intro__slide-item
	background: url('../img/main/introbg.jpg')
	background-size cover
	background-repeat no-repeat
	position relative
	display none
	overflow: hidden

	&:first-child
		display block

	&:before 
		content ''
		display block
		width 550px
		height 415px
		position absolute
		left 0 
		top 0
		background url('../img/main/sota-left.png')
		background-repeat no-repeat
		background-size: cover !important

		@media screen and (max-width 767px)
			display none

	&:after
		content ''
		display block
		width 601px
		height 426px
		position absolute
		bottom 0
		right 0
		background url('../img/main/sota-right.png')
		background-repeat no-repeat
		background-size cover !important
		opacity 0.6

		@media screen and (max-width 767px)
			width 200px
			height 200px
			opacity 0.3


