.event-link
	width 100%
	padding 80px 30px
	display flex
	justify-content center
	max-width 1920px
	width 100%
	box-sizing border-box
	margin 0 auto
	display flex
	flex-direction column
	margin auto

.event-link__slider-js
	width 100%
	max-width 1880px
	display flex
	flex-direction column
	justify-content center
	overflow hidden
	margin: 0 auto
	

.event-link__slide
	width 215px
	width 100%
	height 310px
	height 100%
	padding 0 10px

.event-link__slide--link
	width 100%
	height 100%
	display block

	img
		width 100%
		height 100%
		object-fit cover

.overlay-main
	background-color rgba(40, 40, 40, 0.8)
	width 100%
	height 100%
	z-index 100
	position fixed
	left 0
	top 0
	display none
	

.reg-wrap
	box-sizing border-box
	max-width 620px
	width 100%
	max-height 600px
	height 100%
	position fixed
	z-index 102
	top 50%
	left 50%
	transform: translate(-50%, -50%)
	background-color whiteColor
	padding 70px 70px 50px 70px
	display none
	overflow scroll

	@media screen and (max-width: 767px)
		padding 10px

.reg-close
	position absolute
	right 10px
	top 10px
	width 30px
	height 30px
	display block
	background url('../img/main/close.jpg') center center no-repeat
	background-size cover
	z-index 103

	&:hover
		cursor pointer

	.separator
		margin-top 10px
		margin-bottom 220px

.reg-title
	font-size 30px

.reg-subtitle
	font-size 20px
	font-family 'HelveticaNeue-Roman', sans-serif
	color semiPurple
	margin-bottom 30px


.reg-form
	display flex
	flex-direction column

.reg-checkbox__wrap
	display flex
	align-items flex-start
	position relative

.reg-checkbox__input
	appearance none
	margin 0
	width 23px
	height 20px
	box-sizing border-box
	position relative
	z-index 3

.reg-checkbox__input-wrap
	width 23px
	height 23px
	position relative

.reg-checkbox__input-checkmark
	position absolute
	display inline-block
	width 23px
	height 23px
	left 0
	top 0
	transform translateY(25%)
	
	&:after
		display block
		content ''
		width 23px
		height 20px
		background url('../img/all/dots.png') no-repeat
		position absolute
		top 50%
		transform translateY(-50%)
		z-index: 1

.reg-checkbox__input-wrap input:checked ~ .reg-checkbox__input-checkmark:after
	background url('../img/all/dots-active.png') no-repeat

.reg-checkbox__descr
	margin-left 15px
	margin-bottom 20px
	font-family 'Helvetica-Regular', sans-serif
	font-size 24px
	line-height 30px

.reg-submit
	margin-top 30px
	box-sizing border-box
	height 80px
	text-transform uppercase
	font-size 16px
	font-family 'HelveticaNeue-Bold', sans-serif
	color semiPurple
	background-color white
	border: 2px solid semiPurple
	transition: .2s all ease-in-out
	letter-spacing: .1em

	&:hover
		background-color #5073b6
		color #fff
		border 2px solid #5073b6

