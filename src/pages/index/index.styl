.forum__main-list
	margin 0 0 60px 60px

	@media screen and (max-width: 920px) {
		margin 0 60px 60px 60px
	}

	@media screen and (max-width: 500px) {
		margin: 0 0 60px 0
	}

.forum__main-list-item
	position relative
	padding-left 10px

	@media screen and (max-width: 500px) {
		display flex
		flex-direction column
		justify-content center
		align-items center
		padding 0
	}

	&:not(:last-child)
		margin-bottom 50px

		@media screen and (max-width: 500px) {
			margin-bottom 18px
		}
	
	&:before
		content ''
		position absolute
		display block
		right 100%
		width 62px
		height 58px
		transform translateY(-50%)

		@media screen and (max-width: 500px) {
			position static
			right initial 
			transform none
		}

	&:nth-child(1):before
		background url('../img/main/icon-format.png') no-repeat
		top 25%

		// @media screen and (max-width: 500px) {
		// 	top -40%
		// }
	
	&:nth-child(2):before
		background url('../img/main/icon-info.png') no-repeat
		top 16%

		// @media screen and (max-width: 500px) {
		// 	top -25%
		// }

	&:nth-child(3):before
		background url('../img/main/icon-speaker.png') no-repeat
		top 50%

		// @media screen and (max-width: 500px) {
		// 	top -70%
		// }

	&:nth-child(4):before
		background url('../img/main/icon-tel.png') no-repeat
		top 35%

		// @media screen and (max-width: 500px) {
		// 	top -50%
		// }

.forummain__item-text
	@media screen and (max-width: 500px) {
		text-align center
	}	

	.forum-subtitle
		margin-bottom 10px

.forummain__item-text--subtitle:not(&:last-child)
	margin-bottom 10px		

.forummain__item-sublist 
	margin-top 10px

	@media screen and (max-width: 500px) {
		text-align left
	}	

	.forummain__item-sublist--item
		margin 0 0 10px 25px
		padding-left 5px
		position relative

		&:before
			position absolute
			content '-'
			right 100%
			color #fff
			bottom 0%
			

