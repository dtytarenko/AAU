//------------------------------------main-forum-------------------------------------

////*! start general style for this block
	
	// .heading__subtitle


.forum-subtitle
	width 100%
	color whiteColor
	text-transform uppercase
	font-family 'HelveticaNeue-Bold'
	font-size 14px


.forum-text
	font-size 14px
	color whiteColor 
	font-family 'HelveticaNeue-Light'
	text-transform none

////*! end general style for this block

.forum__wrap
	display flex
	padding-top 100px
	
	@media screen and (max-width: 1280px) {
		flex-direction column
		padding-top 80px
	}

	@media screen and (max-width 767px){
		padding-top: 40px
	}
		
		
.forum__media
	max-width 35%
	width 100%
	position relative
	background url('../img/main/main-forum.jpg')
	background-size cover
	background-position center

	@media screen and (max-width: 1280px) {
		max-width none
		width 100%
		height 450px
		background-size cover
		display flex
		align-items flex-end
		justify-content center
	}

	&:before
		content ''
		display block
		background url('../img/main/main-forum-bg-line.jpg') repeat round
		background-repeat round
		width 10px
		height 100%
		top 0
		right 10px
		position absolute

		@media screen and (max-width: 1280px) {
			display none
		}

.forum__media
	.video
		position absolute
		top 70px
		left 320px

		@media screen and (max-width: 1680px) {
			left 180px
		}

		@media screen and (max-width: 1500px) {
			left 120px
		}	

		@media screen and (max-width: 1400px) {
			left 80px
		}		

		@media screen and (max-width: 1400px) {
			left 50px
		}

		@media screen and (max-width: 1280px) {
			left initial 
			top 100px
			position relative
		}

		@media screen and (max-width: 500px) {
			max-width 275px
			max-height 153px
			border 5px solid whiteColor
			}
		

.forum__info--wrap
	background url('../img/main/main-forum-bg.jpg')
	background-size cover
	background-repeat round
	max-width 65%
	width 100%
	padding 80px 0 60px 165px

	@media screen and (max-width: 1680px) {
		padding 80px 0 60px 100px
		background-repeat round
	}

	@media screen and (max-width: 1500px) {
		padding 80px 0 60px 80px
	}		

	@media screen and (max-width: 1400px) {
		padding 80px 0 60px 60px
	}

	@media screen and (max-width: 1280px) {
		max-width none
		width 100%
		padding 160px 60px 80px 60px
		background-repeat round
	}

	@media screen and (max-width: 1150px) {
		padding 160px 40px 80px 0px
		display flex
		justify-content center
	}

	@media screen and (max-width: 600px) {
		background: url('../img/main/main-forum-bg-mob.jpg')
		background-repeat round
	}

.forum__info
	max-width 850px
	width 100%
	box-sizing border-box
	padding 0 15px

	@media screen and (max-width: 1280px) {
		max-width 1100px
	}

	@media screen and (max-width: 1150px) {
		max-width 900px
	}

	@media screen and (max-width: 850px) {
		padding 0 30px
	}

	@media screen and (max-width: 500px) {
		padding 0 20px
	}

.forum__heading
	h1
		margin-bottom 40px
		font-size 36px
		display flex
		flex-direction column
		width 100%
		letter-spacing 1.8px
		color whiteColor
		text-transform none
		font-family 'HelveticaNeue-Bold'

		@media screen and (max-width: 1280px) {
			text-align center
		}

		@media screen and (max-width: 500px) {
			margin: 0 0 80px 0
		}

