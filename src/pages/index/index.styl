//-------------------------------------------preview-------------------------------------------
.intro
	margin: 0 20px

	.container 
		max-width 1880px
		width: 100%
		display flex
		flex-direction column
		justify-content space-between
		align-items center

.intro__slide-item
	background url("../../img/main/introbg.jpg")
	background-repeat no-repeat
	background-size cover

.intro__event 
	width 100%
	display flex
	flex-direction column
	align-items center
	position relative
	padding-top 90px

	&:before 
		content ''
		display block
		width 261px
		height 191px
		background url("../../img/all/logo.png") no-repeat
		position absolute
		top 135px
		right 75%
		margin-bottom 120px
		background-size cover

		@media screen and (max-width 1600px) {
			right: 75%
		}

		@media screen and (max-width 1280px) {
			display block
			position relative
			top 40px 
			right 0%
		}

		@media screen and (max-width 700px) {
			width 179px
			height 131px
		}


	.intro-logo
		display none

		@media screen and (max-width: 1280px) {
			display block
			width 261px
			height 191px
			margin 42px 0 120px 0
		}

.intro-title 
	text-transform uppercase
	font-size 72px
	color whiteColor
	text-align center
	position relative
	font-family 'Helvetica-Bold'
	font-weight 700

	@media screen and (max-width: 700px) {
		font-size 30px
		margin 0 30px 0 30px
	}

.intro-subtitle 
	color #fcdab0
	font-size 48px
	font-family 'HelveticaNeue-Bold'
	line-height 72px
	margin 40px 0 50px 0	
	width 100%
	text-align center

	@media screen and (max-width: 1280px) {
		margin 30px 0
	}

	@media screen and (max-width: 700px) {
		font-size 24px
		letter-spacing 1.2px
		line-height 36px
		margin 15px 0
	}


.intro-bottomtitle 
	color whiteColor
	font-size 60px
	font-weight 700 
	font-family 'HelveticaNeue-Bold'
	width 600px
	text-align center
	line-height 1.2

	@media screen and (max-width: 700px) {
		font-size 24px
		letter-spacing 1.2px
		width 250px
		margin: 0 40px
	}

.intro-place-wrap
	margin 60px 0
	align-self flex-start
	position relative

	@media screen and (max-width: 1280px) {
		width 75%
	}

	&:after
		content ''
		position absolute
		display block
		width 50px
		height 99%
		top 0 
		right 0
		background #2b3384
		transform-origin bottom left
		transform skew(-30deg, 0deg)
	
		@media screen and (max-width: 700px) {
			width 100px
		}
	
.intro__place 
	padding 25px 25px 25px 287px
	color #e1e1eb
	text-transform uppercase
	align-self flex-start
	background-color semiViolet
	font-family 'Helvetica-Bold'
	font-size 24px 
	font-weight 500
	line-height 36px
	letter-spacing 3px
	position relative
	margin 0
	text-align center
	z-index 99

	@media screen and (max-width: 1280px) {
		padding 15px 25px 15px 54px
	}

	@media screen and (max-width: 700px) {
		text-align left
		font-size 18px
		letter-spacing 0.9px
		line-height 1.5
		padding 5px 10px 5px 20px
	}
		
.intro-dots
	position relative
	bottom 50px
	display flex	
	width 100%
	padding 0
	list-style none
	text-align center
	justify-content center

.intro-dots 
	li
		position relative
		height 10px
		padding 0
		cursor pointer

		&:before
			content ''
			display block
			width 19px
			height 18px
			background url("../../img/all/intro-dots.png") no-repeat

		&:hover
			cursor pointer

		&:nth-child(odd)
			top 9px

		&:nth-child(1), &:nth-child(3), &:nth-child(5)
			top 9px

		button
			background-color transparent
			font-size 10px
			color transparent

	.slick-active
		&:before
			content ''
			display block
			width 19px
			height 18px
			background url("../../img/all/intro-dots-actv.png") no-repeat


//--------------------------------------------main-about---------------------------------------

.main-about
	display flex
	justify-content center

	.container
		display flex
		justify-content space-between
		
		@media screen and (max-width: 1280px) {
			flex-direction column
			align-items flex-start
			margin-bottom 80px
			padding 0 35px 0 30px
		}

		@media screen and (max-width: 510px) {
			margin-bottom 60px
		}

.about__article-wrap
	max-width 730px
	width 100%
	margin-right 60px
	display flex
	flex-direction column

	@media screen and (max-width: 1280px) {
		max-width none
		margin 0
	}

	@media screen and (max-width: 510px) {
		text-align center
		align-items center
	}

	.separator
		@media screen and (max-width: 510px) {
			justify-content center
		}

		&:after
			@media screen and (max-width: 510px) {
				width 100%
			}

.about__article-title
	@media screen and (max-width: 510px) {
		font-size 30px
	}

.about__article-subtitle 
	@media screen and (max-width: 510px) {
		text-align center
		font-size 18px
		letter-spacing 0.9px
	}

	.btn-l
		margin-top 40px

.about__article-text-wrap
	@media screen and (max-width: 1280px) {
		padding-right 20px
	}

	@media screen and (max-width: 510px) {
		padding 0
	}

.about__article-btn-link
	margin-top 45px
	

.calendar
	max-width 440px
	width 100%

	@media screen and (max-width: 1280px) {
		max-width none
	}


.calendar__title-wrap 

	@media screen and (max-width: 1280px) {
		margin-top 80px
	}

	@media screen and (max-width 510px) {
		margin-top 60px
	}

//------------------------------------main-forum-------------------------------------

////*! start general style for this block

.forum-subtitle
	width 100%
	color whiteColor
	text-transform uppercase
	font-family 'HelveticaNeue-Bold'
	font-size 14px


.forum-text
	font-size 14px
	color whiteColor 
	font-family 'HelveticaNeue-Light'
	text-transform none

////*! end general style for this block

.forum__wrap
	display flex
	padding-top 100px
	
	@media screen and (max-width: 1280px) {
		flex-direction column
	}
		
		
.forum__media
	max-width 35%
	width 100%
	position relative
	background url("../../img/main/main-forum.jpg")
	background-size cover
	background-position center

	@media screen and (max-width: 1280px) {
		max-width none
		width 100%
		height 450px
		background-size cover
	}

	&:before
		content ''
		display block
		background url("../../img/main/main-forum-bg-line.jpg")
		background-repeat round
		width 10px
		height 100%
		background-size cover
		top 0
		right 10px
		position absolute

		@media screen and (max-width: 1280px) {
			display none
		}


.video
	position absolute
	top 70px
	left 320px

	@media screen and (max-width: 1680px) {
		left 180px
	}

	@media screen and (max-width: 1500px) {
		left 120px
	}	

	@media screen and (max-width: 1400px) {
		left 80px
	}		

	@media screen and (max-width: 1400px) {
		left 50px
	}

	@media screen and (max-width: 1280px) {
		left 30%
		top 70%
	}

	@media screen and (max-width: 920px) {
		left 25%
	}

	@media screen and (max-width: 800px) {
		max-width 350px
		max-height 200px
	}
	
	@media screen and (max-width: 660px) {
		left 23%
		max-width 350px
		max-height 200px
	}

	@media screen and (max-width: 600px) {
		left 20%
	}

	@media screen and (max-width: 540px) {
		max-width 300px
	}

.forum__info--wrap
	background url("../../img/main/main-forum-bg.jpg")
	background-size cover
	background-repeat round
	max-width 65%
	width 100%
	padding 80px 0 60px 165px

	@media screen and (max-width: 1680px) {
		padding 80px 0 60px 100px
	}

	@media screen and (max-width: 1500px) {
		padding 80px 0 60px 80px
	}		

	@media screen and (max-width: 1400px) {
		padding 80px 0 60px 60px
	}

	@media screen and (max-width: 1280px) {
		max-width none
		width 100%
		padding 160px 60px 80px 60px
	}

	@media screen and (max-width: 1150px) {
		padding 160px 40px 80px 0px
		display flex
		justify-content center
	}

	@media screen and (max-width: 600px) {
		background: url("../../img/main/main-forum-bg-mob.jpg")
		background-repeat round
	}

.forum__info
	max-width 850px
	width 100%
	box-sizing border-box
	padding 0 15px

	@media screen and (max-width: 1280px) {
		max-width 1100px
	}

	@media screen and (max-width: 1150px) {
		max-width 900px
	}

	@media screen and (max-width: 850px) {
		padding 0 30px
	}

	@media screen and (max-width: 500px) {
		padding 0 20px
	}

.forum__heading
	margin-bottom 40px
	font-size 36px

	@media screen and (max-width: 1280px) {
		text-align center
	}

	@media screen and (max-width: 500px) {
		margin: 0 0 80px 0
	}
	
	.heading__title
		width 50%
		color whiteColor
		text-transform none
		font-family 'HelveticaNeue-Bold'

		@media screen and (max-width: 1680px) {
			width 100%
		}

	.heading__subtitle 
		color whiteColor
		text-transform none
		font-family 'HelveticaNeue-Bold'


