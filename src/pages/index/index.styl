///////// start .forum__timeplace-list
//
//

.forum__timeplace-list
	display flex
	align-items center

	@media screen and (max-width: 920px) {
		flex-direction column
		align-items flex-start
	}



.forum__timeplace-list--item
	display flex
	align-items center
	justify-content flex-start
	width 30%
	margin-bottom 25px
	position relative

	@media screen and (max-width: 920px){
		width 100%
	}

	@media screen and (max-width: 500px){
		justify-content center
		margin-bottom 80px
		padding-top 15px
	}

	&:nth-child(3)
		width 40%

		@media screen and (max-width: 920px){
			width 100%
		}

		@media screen and (max-width: 500px){
			padding-top 10px
		}
		

	&:before
		content ''
		display block
		width 63px
		height 58px
		margin-right 10px
		right 50%
		top -50%

		@media screen and (max-width: 500px){
			position absolute
			top -100%
			left 42%
		}
	
	&:nth-child(1):before
		background: url('../../img/main/icon-date.png') no-repeat;

	&:nth-child(2):before
		background: url('../../img/main/icon-time.png') no-repeat;

	&:nth-child(3):before
		background: url('../../img/main/icon-gps.png') no-repeat;


.timeplace__text-wrap
	position relative
	max-width 200px
	font-family 'HelveticaNeue-Light'

	@media screen and (max-width: 920px) {
		max-width none
	}

	@media screen and (max-width: 500px){
		max-width: none
		width 100%
		text-align center
		display flex
		flex-direction column
		align-items center
	}

	.forum-text
		@media screen and (max-width: 500px){
			width 40%
		}

