@import '../base'
@import '../fonts'
@import '../reset'
@import '../vars'
@import '../components/footer'
@import '../components/controlpanel'


//----------------------------header--------------------------------

header
	margin-bottom 20px
	border-bottom 1px solid #dbe0ea

//----------------------------menu----------------------------------




.main-menu
	display flex
	justify-content space-between
	height 80px


.logo-wrap {
	position relative
	bottom: 50px
	left 2%
}


.menu-block
		max-width 520px
		width 100%
		margin 30px 0 25px

		.menu
			display flex
			justify-content flex-end
			align-items center

			.menu-item
				margin-left 30px

				a
					font-size 14px
					font-family 'HelveticaNeue-Medium'
					color semiBlack
					text-transform uppercase
					letter-spacing 0.025em
					line-height 1.2em
					position relative
					padding 0 0 23px 0

					&:after
						position absolute
						content ''
						width 0
						height 0
						border-left 4px solid transparent
						border-right 4px solid transparent
						border-top 4px solid semiBlack //this is triangle
						top 20%
						left 105%

					&:before 
						content ""
						position absolute
						left 50%
						bottom 0
						width 0
						height 3px
						background semiViolet
						transform translateX(-50%)
						transition width 0.2s ease-in-out

				&:hover

					a
						color semiViolet

						&:after
							border-top 4px solid semiViolet 
						
						&:before
							width 100%

			.submenu
				display none


	.menu-block.right
		max-width 530px

		.menu
			margin-right 10px

			.menu-item
				margin-left 29px

				&:first-child
					margin-left 0

//-------------------------------------------preview-------------------------------------------
.intro
	background url("../../img/main/background.png") no-repeat
	margin: 0 20px

	.container 
		max-width 1880px
		width: 100%
		display flex
		flex-direction column
		justify-content space-between
		align-items center

.intro-slide
	display flex
	flex-direction column
	align-items center
	width 100%


.intro-title 
	text-transform uppercase
	font-size 72px
	color lightColor
	text-align center
	position relative
