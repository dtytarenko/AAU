//-------------------------------------blog---------------------------------------

.blog

	.container
		display flex
		justify-content space-between
		position relative

		&:before
			content ''
			display block
			width 1px
			height calc(100% - 20px)
			position absolute
			top 100px
			left 50%
			background-color #CCCCCC

		.event
			max-width 550px
			width 100%
			margin-left 20px

			.btn-block
				display none

		.news
			max-width 550px
			width 100%
			margin-right 20px

			.btn-block
				display none

	.btn-block
		display flex
		align-items center
		justify-content space-between
		margin-bottom 100px

		&:before
			content none

		.news-btn-block
			max-width 550px
			width 100%
			display flex

			.btn-xs
				margin-right 40px

		.entry-btn-block
			max-width 550px
			width 100%

