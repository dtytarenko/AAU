//----------------------------header--------------------------------

header
	margin-bottom 20px
	border-bottom 1px solid #dbe0ea

//----------------------------menu----------------------------------




.main-menu
	display flex
	justify-content space-between
	height 80px
	max-width 1500px

	@media screen and (max-width: 1280px) {
		display none
	}	


.logo-wrap 
	position relative
	bottom: 50px
	left 2%

.menu-block-left, .menu-block-right
		max-width 800px
		width 100%
		margin 30px 0 25px

.menu
	display flex
	justify-content flex-end

.menu-item
	z-index 99
	text-align center
	box-sizing: border-box
	max-width 300px
	width 100%

	a
		font-size 14px
		font-family 'HelveticaNeue-Medium'
		color semiBlack
		text-transform uppercase
		letter-spacing 0.025em
		line-height 1.2em
		position relative
		padding 0 1px 23px 0
		width 200px

		&:after
			position absolute
			content ''
			width 0
			height 0
			border-left 4px solid transparent
			border-right 4px solid transparent
			border-top 4px solid semiBlack //this is triangle
			top 20%
			left 100%

		&:before 
			content ""
			position absolute
			left 50%
			bottom 0
			width 0
			height 3px
			background semiViolet
			transform translateX(-50%)
			transition width 0.2s ease-in-out

	&:hover

		a
			color semiViolet

		&:after
			border-top 4px solid semiViolet 
						
			&:before
				width 100%

		.submenu
			display block
			margin-top 40px
			z-index 99
			font-size 12px
			text-align left
			background-color bgHeaderColor

			
		

.submenu
	display none


.menu
	margin-right 10px

	&:first-child
		margin-left 0

//-------------------------------------------preview-------------------------------------------
.intro
	margin: 0 20px

	.container 
		max-width 1880px
		width: 100%
		display flex
		flex-direction column
		justify-content space-between
		align-items center

.intro__slide-item
	background url("../../img/main/introbg.jpg")
	background-repeat no-repeat
	background-size cover

.intro__event 
	width 100%
	display flex
	flex-direction column
	align-items center


.intro-title 
	text-transform uppercase
	font-size 72px
	color lightColor
	text-align center
	position relative
	font-family 'Helvetica-Regular'
	font-weight 700

	&:after 
		content ''
		display block
		width 261px
		height 191px
		background url("../img/main/logo-white.png") no-repeat
		position absolute
		top 50% 
		right: 110%

.intro-subtitle 
	color #fcdab0
	font-size 48px
	font-weight 700
	font-family 'HelveticaNeue-Roman'
	line-height 72px
	margin 40px 0 50px 0	
	width 100%
	text-align center

.intro-bottomtitle 
	color lightColor
	font-size 60px
	font-weight 700 
	font-family 'HelveticaNeue-Roman'
	width 520px
	text-align center

.intro-place-wrap
	margin 30px 0 60px 0
	align-self flex-start
	
.intro__place 
	padding 0 25px 0 287px
	color lightColor
	text-transform uppercase
	align-self flex-start
	background-color #2b3384
	font-family 'Helvetica-Regular'
	font-size 24px 
	font-weight 500
	line-height 72px
	letter-spacing 3px
	position relative
	margin 0
		
	&:after
		content ''
		position absolute
		display block
		width 50px
		height 100%
		top 0 
		right 0
		background #2b3384
		transform-origin bottom left
		transform skew(-30deg, 0deg)


.intro-dots
	position relative
	bottom 50px
	display flex	
	width 100%
	padding 0
	list-style none
	text-align center
	justify-content center

.intro-dots 
	li
		position relative
		height 10px
		padding 0
		cursor pointer

		&:before
			content ''
			display block
			width 19px
			height 18px
			background url("../../img/all/intro-dots.png") no-repeat

		&:hover
			cursor pointer

		&:nth-child(odd)
			top 9px

		&:nth-child(1), &:nth-child(3), &:nth-child(5)
			top 9px

		button
			background-color transparent
			font-size 10px
			color transparent

	.slick-active
		&:before
			content ''
			display block
			width 19px
			height 18px
			background url("../../img/all/intro-dots-actv.png") no-repeat

.main-dots
	display flex
	justify-content center
	padding 40px 0 

	li
		position relative
		height 10px
		padding 0
		cursor pointer

		&:before
			content ''
			display block
			width 19px
			height 18px
			background url("../../img/all/dots.png") no-repeat

		&:hover
			cursor pointer

		&:nth-child(odd)
			top 9px

		&:nth-child(1), &:nth-child(3), &:nth-child(5)
			top 9px

		button
			background-color transparent
			font-size 10px
			color transparent

	.slick-active
		&:before
			content ''
			display block
			width 19px
			height 18px
			background url("../../img/all/dots-active.png") no-repeat


