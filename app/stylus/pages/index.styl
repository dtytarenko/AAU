//--------------------------------------------main-about---------------------------------------

.main-about

	.container
		display flex
		justify-content space-between
		margin-bottom 100px

		.about
			max-width 730px
			width 100%
			margin-right 60px

			.btn-l
				margin-top 40px

		.calendar
			max-width 440px
			width 100%


//------------------------------------main-forum-------------------------------------

.main-forum

	.full
		display flex

		.forum-media
			max-width 35%
			width 100%
			position relative
			background url("../../img/main/main-forum.jpg") no-repeat
			background-size cover
			background-position center

			&:before
				content ''
				display block
				background url("../img/main/main-forum-bg-line.jpg") no-repeat
				width 10px
				height 100%
				background-size cover
				position absolute
				top 0
				right 10px

			.video
				max-width 420px
				width 100%
				max-height 230px
				height 100%
				border 10px solid #fff
				box-shadow -4.774px 5.119px 29px 0px rgba(0, 0, 0, 0.54)
				display flex
				align-items center
				justify-content center
				position absolute
				top 70px
				left 320px

				iframe
					width 100%
					height 100%

		.bg
			background url("../../img/main/main-forum-bg.jpg") no-repeat
			background-position top right
			background-size cover
			max-width 65%
			width 100%

			.forum-about
				max-width 800px
				width 100%
				box-sizing border-box
				margin-left 165px
				padding 0 15px

				.forum-heading

					.heading-white
						color #fff
						margin 80px 0 40px
						text-transform none

				.forum-list-about
					display flex

					.list-item
						display flex
						align-items center
						justify-content flex-start
						width 32%
						margin-bottom 25px

						.item-text
							color #fff
							font-size 14px
							line-height 18px

							.uppercase
								text-transform uppercase
								font-family 'HelveticaNeue-Bold'

							.indent
								padding-left 20px

				.second
					display block
					margin-bottom 55px

					.list-item
						width 100%
						align-items flex-start

						.item-text
							line-height 24px
							margin-top 10px

				.btn-block
					display flex
					margin-bottom 60px

					.btn-xl
						line-height 70px
						height 70px

						&:hover
							background-color semiPurple

					.btn-s
						line-height 66px
						height 70px
						margin-left 40px



//-------------------------------------general-partners-------------------------------------

.slick-dots
	display flex
	justify-content center
	padding-bottom 60px

	li
		position relative
		width 18px

		&:hover
			cursor pointer

		&:before
			content ''
			display block
			width 19px
			height 18px
			background url("../img/all/dots.png") no-repeat
			position absolute
			top 0
			left 0



		button
			background-color transparent
			font-size 10px
			color transparent

			&:nth-child(odd)
				top 9px

		&:nth-child(1), &:nth-child(3), &:nth-child(5)
			top 9px

	.slick-active

		&:after
			content ''
			display block
			width 9px
			height 8px
			background url("../img/all/dots-active.png") no-repeat
			position absolute
			top 5px
			left 5px

.partners-slider
	max-width 1300px
	width 100%
	margin 0 auto
	box-sizing border-box

	.js-partners-slider

		.partners-slide
			display flex
			justify-content center
			margin-bottom 20px

			.logo
