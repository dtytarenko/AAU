//----------------------------------------------------main-vote--------------------------------------------

.text
	color semiBlack
	
	p
		line-height 30px
		text-align justify
		margin-bottom 20px
		font-weight 300
		font-family 'HelveticaNeue-Roman'

		&:last-child
			margin-bottom 0


.main-vote

	.container
		display flex
		justify-content space-between
